@using WebApplication_MVC.Models.Views

@model SavedCoursesViewModel

<section id="saved-courses">
    <div class="container">

        <div class="profile">
            <div class="profile-picture">
                <img src="~/images/profile/image.svg" alt="Profile picture">
                <i class="fa-solid fa-repeat"></i>
                <h5>@Model.Profile?.FirstName @Model.Profile?.LastName</h5>
                <p>@Model.Profile?.Email</p>
            </div>
            <div class="buttons">
                <a class="btn-theme" asp-controller="Account" asp-action="Details"><i class="fa-regular fa-gear"></i>Account Details</a>
                <a class="btn-theme" asp-controller="Account" asp-action="Security"><i class="fa-solid fa-lock"></i>Security</a>
                <a class="btn-theme active" asp-controller="Account" asp-action="SavedCourses"><i class="fa-solid fa-bookmark"></i>Saved Courses</a>
                <a class="btn-theme" asp-controller="Auth" asp-action="SignOut"><i class="fa-solid fa-arrow-right-from-bracket"></i>Sign Out</a>
            </div>
        </div>

        <div class="courses">
            <div class="title-button">
                <h2>Saved Items</h2>
                <form method="post" asp-controller="Account" asp-action="SavedCourses">
                    <button class="btn-theme-s"><i class="fa-solid fa-trash"></i>Delete all</button>
                </form>
                
            </div>
            <div class="articles">
                @if(Model.Courses != null)
                {
                    foreach(var course in Model.Courses)
                    {
                        <div onclick="location.href='@Url.Action("SingleCourse", "Account", new {id = @course.Id})'" class="article">
                            <div class="best-seller">@course.BestSeller</div>
                            @if (course.Saved)
                            {
                                <a href="#" class="saved" onclick="saveCourse(@course.Id); event.stopPropagation();"><i class="fa-regular fa-bookmark"></i></a>
                            }
                            else
                            {
                                <a href="#" class="not-saved" onclick="saveCourse(@course.Id); event.stopPropagation();"><i class="fa-regular fa-bookmark"></i></a>


                            }


                            <img src="@Url.Content(course.Image)" alt="">
                            <div class="article-content">
                                <h5>@course.Title</h5>
                                <p>@course.Author</p>
                                <div class="price">
                                    @if (course.Price != null)
                                    {
                                        <div> @course.Price</div>
                                    }
                                    else
                                    {
                                        <div class="sale">@course.SalePrice</div>
                                        <s><p>@course.OldPrice</p></s>
                                    }
                                </div>
                                <div class="hours-likes">
                                    <div class="hours">
                                        <i class="fa-duotone fa-timer"></i>
                                        <p>@course.Hours</p>
                                    </div>
                                    <div class="likes">
                                        <i class="fa-light fa-thumbs-up"></i>
                                        <p>@course.Likes</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>

    </div>
</section>
